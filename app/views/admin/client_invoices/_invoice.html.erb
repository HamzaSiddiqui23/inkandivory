<style>
#invoice-POS{
  box-shadow: 0 0 1in -0.25in rgba(0, 0, 0, 0.5);
  padding:2mm;
  margin: 0 auto;
  width: 75%;
  background: #FFF;
  
  ::selection {background: #f31544; color: #FFF;}
  ::moz-selection {background: #f31544; color: #FFF;}
}
<%i = ClientInvoice.find(resource.id) %>
</style>
<div>
  <div id="invoice-POS" class="row-print">

    <center id="top">
      <div class="info">
        <img style= "width: 150px; height: 150px;" src="../../logo.svg"/>
      </div>
      <div class="info"> 
       <h2>Ink & Ivory</h2>
      </div><!--End Info-->
    </center><!--End InvoiceTop-->
    
    <div id="mid">
      <div class="info">
        <p> 
          Client Name:  <%=i.client.name %>
          <br/>
          Invoice Generated By: <%=i.user.full_name %>
          <br/>
          Contact Email: <%= i.user.email %>
          <br/>
          Date: <%= i.invoice_created_date %>
        </p>
     </div>
   </div><!--End Invoice Mid-->

   <div id="bot">

    <div id="table" class="panel_contents panel">
      <table>
        <tr class="tabletitle">
          <td class="item"><h2 class="itemtext">Task Name</h2></td>
          <td class="Hours"><h2 class="itemtext">Task Rate</h2></td>
          <td class="Rate"><h2 class="itemtext">Number of Words</h2></td>
          <td class="Rate"><h2 class="itemtext">Total</h2></td>
          <td class="Rate"><h2 class="itemtext">Submission Date</h2></td>
        </tr>


        <% i.client_invoice_tasks.each do |it| %>
        <tr class="service">
          <td class="tableitem"><p class="itemtext"> <%=it.client_task.task_title %> </p></td>
          <td class="tableitem"><p class="itemtext"><%=it.client_task.pay_rate %></p></td>
          <% if i.payment_type == "Submitted Word Count" %>
          <td class="tableitem"><p class="itemtext"> <%=it.client_task.submitted_word_count %></p></td>
          <td class="tableitem"><p class="itemtext"> <%=it.client_task.pay_rate * it.client_task.submitted_word_count %></p></td>
          <% else %>
          <td class="tableitem"><p class="itemtext"> <%=it.client_task.required_word_count %></p></td>
          <td class="tableitem"><p class="itemtext"> <%=it.client_task.pay_rate * it.client_task.required_word_count %></p></td>
          <% end %>
          <td class="tableitem"><p class="itemtext"> <%=it.client_task.task_submitted_date_stamp %></p></td>
        </tr>
        <% end %>
        <% if i.advance.nil? %>
        <tr class="tabletitle">
          <td></td>
          <td></td>
          <td class="Rate"><h2 class="itemtext">Grand Total</h2></td>
          <td class="payment"><h2 class="itemtext">Rs.<%=i.total_amount %></h2></td>
          <td></td>
        </tr>
        <% else %>
        <tr class="tabletitle">
          <td></td>
          <td></td>
          <td class="Rate"><h2 class="itemtext">Advance</h2></td>
          <td class="payment"><h2 class="itemtext">Rs.<%=i.advance %></h2></td>
          <td></td>
        </tr>
        <tr class="tabletitle">
          <td></td>
          <td></td>
          <td class="Rate"><h2 class="itemtext">Grand Total</h2></td>
          <td class="payment"><h2 class="itemtext">Rs.<%=i.total_amount - i.advance %></h2></td>
          <td></td>
        </tr>
        <% end %>
      </table>
    </div><!--End Table-->
    <p> To Be Paid @ 
    <br/>
     Bank Name: HBL 
     <br/>
     Account Number: 17427901877803 </p>
    <div id="legalcopy">
      <p class="legal"><strong>Thank You For Having Faith In Us!</strong>Â </br>
        	&#169; Ink & Ivory
      </p>
    </div>

  </div><!--End InvoiceBot-->
</div><!--End Invoice-->
</div>
